<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grolubfinal"
    android:gravity="center|center_horizontal"
    android:orientation="vertical"
    tools:context=".WelcomeScreen">

    <Button
        android:id="@+id/joinnowbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginnowbutton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/inputdesign"
        android:onClick="joinnoebutton"
        android:padding="20dp"
        android:text="Join Now"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <Button
        android:id="@+id/loginnowbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:onClick="loginnowbutton"
        android:padding="20dp"
        android:text="Already Have A Account? Log In"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="183dp"
        android:alpha="0"
        android:gravity="center|center_horizontal"
        android:text="@string/Welcomenote"
        android:textColor="?attr/colorPrimaryDark"
        android:textSize="18sp" />
</RelativeLayout>